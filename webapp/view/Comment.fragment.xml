<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="commentDialogId" title="{i18n>addNote}" contentHeight="25%" contentWidth="25%">
		<VBox class="sapUiMediumMargin">
			<Label text="{i18n>note}"/>
			<TextArea width="100%" placeholder="{i18n>addNote}" value="{confirmationModel>/comment}"/>
		</VBox>
		<beginButton>
			<Button type="Accept" press="onAddComment" icon="sap-icon://add"/>
		</beginButton>
		<endButton>
			<Button type="Reject" press="onCloseCommentDialog" icon="sap-icon://decline"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>